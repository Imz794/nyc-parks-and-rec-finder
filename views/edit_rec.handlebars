<div>
    <h4>Edit Review</h4>
    <form method="POST" action="/rec_centers/{{rec._id}}/rating/{{review._id}}/edit">
        <label for="reviewtitle">Review:</label>
        <input type="text" id="reviewtitle" name="reviewtitle" value="{{review.title}}">

        <label for="reviewbox">Description:</label>
        <input type="text" id="reviewbox" name="reviewbox" value="{{review.review}}">

        <label for="rating">Rating(1-5):</label>
        <input type="number" id="rating" name="rating" min="1" max="5" value="{{review.rating}}">

        <button type="submit" id="submitrev" name="submitrev">Post</button>
    </form>

    {{#if errors}}
        <p>{{errors}}</p>
        {{#if login}}
            <a href="/login">Click here to log in</a>
        {{/if}}
    {{/if}}
</div>