<div class="favorites-container">
  <h1>My Favorites</h1>
  
  {{#if user}}
    <p>Welcome, {{user.firstName}}! Here are your favorite facilities.</p>
  {{/if}}

  <div class="filters">
    <h3>Filter By:</h3>
    <form method="GET" action="/profile/favorites">
      <label for="type">Facility Type:</label>
      <select name="type" id="type">
        <option value="">All Types</option>
        <option value="park" {{#if (eq filters.type "park")}}selected{{/if}}>Parks</option>
        <option value="rec_center" {{#if (eq filters.type "rec_center")}}selected{{/if}}>Recreation Centers</option>
      </select>

      <label for="borough">Borough:</label>
      <select name="borough" id="borough">
        <option value="">All Boroughs</option>
        <option value="Manhattan" {{#if (eq filters.borough "Manhattan")}}selected{{/if}}>Manhattan</option>
        <option value="Brooklyn" {{#if (eq filters.borough "Brooklyn")}}selected{{/if}}>Brooklyn</option>
        <option value="Queens" {{#if (eq filters.borough "Queens")}}selected{{/if}}>Queens</option>
        <option value="Bronx" {{#if (eq filters.borough "Bronx")}}selected{{/if}}>Bronx</option>
        <option value="Staten Island" {{#if (eq filters.borough "Staten Island")}}selected{{/if}}>Staten Island</option>
      </select>

      <button type="submit">Filter</button>
      <a href="/profile/favorites">Clear Filters</a>
    </form>
  </div>

  <p class="total-count">Total Favorites: {{totalFavorites}}</p>

  {{#if favorites}}
    {{#if totalFavorites}}
      <div class="favorites-list">
        {{#each favorites}}
          <div class="favorite-card">
            <h3>{{this.facilityName}}</h3>
            <p><strong>Type:</strong> {{this.facilityType}}</p>
            <p><strong>Borough:</strong> {{this.borough}}</p>
            <p><strong>Added:</strong> {{this.dateAdded}}</p>
            
            <div class="card-actions">
              <a href="/facility/{{this.facilityId}}" class="btn btn-view">View Details</a>
              <form method="POST" action="/facility/{{this.facilityId}}/favorite" style="display: inline;">
                <input type="hidden" name="action" value="remove">
                <button type="submit" class="btn btn-remove">Remove</button>
              </form>
            </div>
          </div>
        {{/each}}
      </div>
    {{else}}
      <div class="no-favorites">
        <p>No favorites match your filters.</p>
        <a href="/profile/favorites">Clear Filters</a>
      </div>
    {{/if}}
  {{else}}
    <div class="no-favorites">
      <p>You haven't added any favorites yet!</p>
      <p>Browse facilities and click the "Add to Favorites" button to save your favorite parks and recreation centers.</p>
      <div class="action-links">
        <a href="/parks" class="btn">Browse Parks</a>
        <a href="/rec_centers" class="btn">Browse Recreation Centers</a>
        <a href="/search" class="btn">Search Facilities</a>
      </div>
    </div>
  {{/if}}

  <div class="back-link">
    <a href="/profile">‚Üê Back to Profile</a>
  </div>
</div>

<style>
