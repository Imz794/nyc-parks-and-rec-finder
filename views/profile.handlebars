<section>
  <h2>My Profile</h2>

  <p>Name: {{user.firstName}} {{user.lastName}}</p>
  <p>User ID: {{user.userId}} | Email: {{user.email}}</p>
  <p>Gender: {{user.gender}} | Age: {{user.age}}</p>
  <p>Member Since: {{user.signupDate}}</p>

  {{#if user.lastLogin}}
    <p>Last Login: {{user.lastLogin}}</p>
  {{/if}}

<!--become admin-->
  {{#if user.role}}
    {{#unless (eq user.role "admin")}}
      <form action="/become-admin" method="get">
        <button type="submit">Become Admin</button>
      </form>
    {{/unless}}
  {{else}}
    <form action="/become-admin" method="get">
      <button type="submit">Become Admin</button>
    </form>
  {{/if}}

  <h3>My Favorites</h3>
  {{#if user.favorites}}
    <ul>
      {{#each user.favorites}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  {{else}}
    <p>You have no favorites yet.</p>
  {{/if}}

  <h3>My Reviews</h3>
  {{#if user.reviews}}
    <ul>
      {{#each user.reviews}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  {{else}}
    <p>You have not submitted any reviews yet.</p>
  {{/if}}

  <p>
    <a href="/">Go to Home</a>
  </p>
</section>
