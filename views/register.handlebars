<section>
  <h2>Sign Up</h2>

  <form method="POST" action="/register" id="signup-form" name="signup-form">
    <label for="firstName">First Name</label>
    <input type="text" name="firstName" id="firstName">

    <label for="lastName">Last Name</label>
    <input type="text" name="lastName" id="lastName">

    <label for="userId">User ID</label>
    <input type="text" name="userId" id="userId">

    <label for="email">Email</label>
    <input type="email" name="email" id="email">

    <label for="password">Password</label>
    <input type="password" name="password" id="password">

    <label for="confirmPassword">Confirm Password</label>
    <input type="password" name="confirmPassword" id="confirmPassword">

    <label for="gender">Gender</label>
    <select name="gender" id="gender">
      <option value="">Select one</option>
      <option value="Male">Male</option>
      <option value="Female">Female</option>
      <option value="Other">Other</option>
    </select>

    <label for="age">Age</label>
    <input type="number" name="age" id="age" min="0" max="120">

    <button type="submit" name="submitButton" id="submitButton">Submit</button>
  </form>

  {{#if errors}}
    <div class="error-container">
      <h3>Error</h3>
      <ul>
        {{#each errors}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    </div>
  {{/if}}

  <p>
    Already have an account?
    <a href="/login">Click here to sign in.</a>
  </p>

  <p>
    <a href="/">Go to Home</a>
  </p>

  <script src="/public/js/form_validate.js"></script>
</section>
